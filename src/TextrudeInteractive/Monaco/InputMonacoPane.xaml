<UserControl
  x:Class="TextrudeInteractive.InputMonacoPane"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:TextrudeInteractive"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
  xmlns:monaco="clr-namespace:TextrudeInteractive.Monaco"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <DockPanel>
    <DockPanel DockPanel.Dock="Bottom">
      <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
        
        <ComboBox
          Name="FormatSelection"
          HorizontalAlignment="Right"
          HorizontalContentAlignment="Right"
          />
      </StackPanel>

      <local:FileBar
        x:Name="FileBar"
        DockPanel.Dock="Left"
       />
    </DockPanel>

   <monaco:MonacoEditPane x:Name="MonacoPane"
                          Format="{Binding ElementName=FormatSelection,Path=SelectedValue}"
   />
  </DockPanel>
</UserControl>
